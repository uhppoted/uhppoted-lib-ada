with "config/integration_tests_config.gpr";
project Integration_Tests is
   Platform := external ("platform", Integration_Tests_Config.Alire_Host_OS);

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Integration_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("uhppoted_lib_integration_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use Integration_Tests_Config.Ada_Compiler_Switches & (
          "-gnat2022"
         ,"-gnatyM120"
      );
   end Compiler;

   package Linker is
      case Platform is
         when "macos" =>
            for Default_Switches ("Ada") use ("-Wl,-syslibroot,/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk");
         when "linux" | "windows" =>
            for Default_Switches ("Ada") use ();
         when others =>
            null;
      end case;   
   end Linker;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Integration_Tests;
