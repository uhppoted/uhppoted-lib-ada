with "config/tests_config.gpr";

project Tests is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("uhppoted_lib_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use Tests_Config.Ada_Compiler_Switches & (
          "-gnat2022"
         ,"-gnatyM150"
      );
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use ("-Wl,-syslibroot,/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk");
   end Linker;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Tests;
